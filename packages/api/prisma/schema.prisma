datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Memory {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  date         DateTime
  type         Type
  downloadLink String
  status       Status   @default(PENDING)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Type {
  VIDEO
  PHOTO
}

enum Status {
  SUCCESS
  PENDING
  FAILED
}
